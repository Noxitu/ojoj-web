<h1>Log In</h1>

<% if @error %>
  <p><%= @error %></p>
<% end %>


<%= form_tag( {:action => 'login_attempt'}, role: 'form' ) do %>
  <div class="form-group">
    <%= label_tag :name %>
	<%= text_field_tag :name, nil, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= label_tag :password %>
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div>
  <%= submit_tag "Login", class: 'btn btn-default' %>
<% end %>
