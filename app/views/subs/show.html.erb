<h1>Submissions</h1>

<table class="table">
<tr><th>Id</th><th>Task</th><th>User</th><th>CPU</th><th>MEM</th><th>Status</th></tr>

<tr>
  <td>#<%= @sub.id %></td>
  <td><%= @sub.task.title %></td>
  <td><%= @sub.user.name %></td>
  <td></td>
  <td></td>
  <td><%= content_tag :span, result_title(@sub.result), :class => "label label-#{result_class(@sub.result)}" %></td>
</tr>

</table>

<% if current_user and (current_user.is_admin? or current_user.id == @sub.user_id) %>
  <pre class="well monospaced"><%= @sub.src %></pre>
<% end %>
