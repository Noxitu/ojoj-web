<%= form_for @task, role: 'form' do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
 
  <div class="form-group">
    <%= f.label :content %>
    <%= f.text_area :content, rows: 10, class: 'form-control' %>
  </div>
 
  <%= f.submit :class => 'btn btn-success' %>
  
  <%= yield %>
<% end %>