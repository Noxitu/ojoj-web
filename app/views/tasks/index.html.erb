<h1>Tasks</h1>

<% if current_user and current_user.is_admin? %>
  <%= link_to "New task", new_task_path, :class => 'btn btn-default' %><br><br>
<% end %>

<table class="table">
  <tr>
    <th>Id</th>
    <th>Title</th>
  </tr>
  <% @tasks.each do |task| %>
    <tr>
      <td><%= task.id %></td>
      <td><%= link_to task.title, task %></td>
    </tr>
  <% end %>
</table>